{
  "name": "pure-components",
  "version": "0.0.0-development",
  "description": "React components based on PureCSS",
  "main": "src/index.js",
  "author": "Thram <thramposo@gmail.com> (https://thram.github.io/)",
  "license": "MIT",
  "scripts": {
    "cz": "git add . && git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "eslint src --ext .jsx,.js",
    "test": "yarn lint && jest",
    "test:snap": "yarn lint && jest --updateSnapshot",
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:*",
    "build:dev": "webpack",
    "build:prod": "NODE_ENV=production webpack -p",
    "build:docs": "build-storybook -o ${PWD}/docs",
    "storybook": "start-storybook -p 6006"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss|css|less|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.0.0-alpha.0",
    "@storybook/addon-knobs": "^3.0.0-alpha.0",
    "@storybook/addon-storyshots": "^3.0.0-alpha.0",
    "@storybook/react": "^3.0.0-alpha.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.0.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-scss": "^1.0.0",
    "react-test-renderer": "^16.4.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^7.0.1",
    "semantic-release": "^15.5.0",
    "style-loader": "^0.21.0",
    "umd": "^3.0.1",
    "webpack": "^4.8.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "glamor": "^2.20.25",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Thram/pure-components.git"
  }
}